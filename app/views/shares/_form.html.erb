<%= simple_form_for([@group, @accounting, @share]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :accounting %>
    <%= f.association :lender %>
    <%= f.association :borrower %>
    <%= f.input :amount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
