
<div class="row">
	<div class="panel panel-info">
		<div class="panel-heading clearfix">
			<h2 class="panel-title pull-left"><strong><%= @group.name %></strong></h2>
			<div class="btn-group pull-right">
				<%= link_to 'Back', groups_path , class:"btn btn-primary "%>
				<%= link_to 'Edit', edit_group_path(@group), class:"btn btn-warning "%>
				<%= link_to 'delete', @group, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
			</div>
		</div>
		<div class="panel-body">
			<div class="row">
				<div class="col-md-12">
					<%= render 'layouts/messages' %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<p>
						<%= @group.descritption %>
					</p>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="well">
						<div class="row">
							<% @people.each do |person| %>
							<div class="col-md-1 person">
								<% if person.user.present? %>
								<%= image_tag(person.user.image) %>
								<% else %>
								<div class="image">
									no image available
								</div>
								<% end %>
								<p>
									<strong><%= person.name %></strong>
								</p>
								<p>
									<%= money(person.balance) %>
								</p>
								<% unless person.user.present? %>
									<p><%= link_to "This is me!", {controller: :people, action: :assign, group_id:@group.id, person_id: person.id} %></p>
									<p><%= link_to '', group_person_path(group_id: person.group.id, id: person.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm glyphicon glyphicon-remove-circle" %></p>
								<% else%>
								<% if person.user_id == current_user.id %>
									<%= link_to '', group_person_path(group_id: person.group.id, id: person.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm glyphicon glyphicon-remove-circle" %>
								<% end%>
								<% end %>
							</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					<%= link_to 'New Person', new_group_person_path(group_id: @group.id), class:"btn btn-success" %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<hr />
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h3>Accountings:</h3>
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Paid by</th>
								<th>Amount</th>
								<th>Date</th>
								<th colspan="2"></th>
							</tr>
						</thead>

						<tbody>
							<% @group.accountings.each do |accounting| %>
							<tr>
								<td><%= accounting.name %></td>
								<td class="person">
									<% @person = accounting.person%>
									<% if @person.user.present? %>
									<%= image_tag(@person.user.image) %>
									<% else %>
									<div class="image">
										no image available
									</div>
									<% end %>
									<strong><%= @person.name %></strong>
								</td>
								<td><%= money(accounting.amount) %></td>
								<td><%= distance_of_time_in_words_to_now(accounting.date) %> ago </td>
								<td><%= link_to 'Show', group_accounting_path(group_id: @group.id, id: accounting.id), class:"btn btn-primary btn-sm" %></td>
								<td><%= link_to '', group_accounting_path(group_id: @group.id, id: accounting.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm glyphicon glyphicon-remove-circle" %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
					<p class="pull-right">
						Total: <%= money(@group.accountings.sum(:amount))%>
					</p>
					<hr />
					<%= link_to 'new Accounting', new_group_accounting_path(group_id: @group.id), class:"btn btn-primary"%>
					
				</div>
				<div class="col-md-6">
					<h3>Statistics:</h3>
					<div class="progress">
						<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
							<span class="sr-only">40% Complete (success)</span>
						</div>
					</div>
					<div class="progress">
						<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
							<span class="sr-only">20% Complete</span>
						</div>
					</div>
					<div class="progress">
						<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
							<span class="sr-only">60% Complete (warning)</span>
						</div>
					</div>
					<div class="progress">
						<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
							<span class="sr-only">80% Complete</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel-footer">

		</div>
	</div>
</div>

