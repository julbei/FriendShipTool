<%= link_to 'Back', groups_path , class:"btn btn-primary"%>
<h2>
  <%= @group.name %>
</h2>
<hr />

  <h3>Descritption:</h3>
  <p>
  <%= @group.descritption %>
</p>
<hr />
<%= link_to 'Edit', edit_group_path(@group), class:"btn btn-warning"%>

<hr />
<h3>Participants:</h3>
	<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.balance %></td>
        <td><%= link_to 'Destroy', group_person_path(group_id: @group.id, id: person.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Person', new_group_person_path(group_id: @group.id), class:"btn btn-success" %>


