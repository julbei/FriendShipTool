			<h3 class="panel-title">
				<%= @group.name %>
			</h3>
		</div>
		<div class="panel-body">
			<p>
				<%= @group.descritption %>
			</p>
		</div>
		<div class="panel-footer">
			<%= link_to 'Edit', edit_group_path(@group), class:"btn btn-warning"%>
		</div>	
	</div>	
</div>
