
<div class="page-header">
<h1>Your Groups</h1>
</div>
<%= render 'layouts/messages' %>
<div class="row">
	<% @groups.each  do |group| %>
	<div class="col-md-4 group">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title"><%= link_to group.name, group%> <span class="badge pull-right"><%= group.persons.count %></span> </h3>
			</div>
			<div class="panel-body">
				<p>
					<%= group.descritption.first(30) %>
				</p>
			</div>
			<div class="panel-footer">
					<%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm glyphicon glyphicon-remove-circle"%>
			</div>
		</div>
	</div>
	<% end %>
</div>

<%= link_to 'New Group', new_group_path, class:"btn btn-success"  %>
