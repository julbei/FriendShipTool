<h1>Listing people</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.balance %></td>
        <td><%= link_to 'Show', group_person_path(id:person), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', group_person_path(id: person), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_group_person_path %>
